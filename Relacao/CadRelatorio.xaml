<Window x:Class="Relacao.CadRelatorio"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:commands="clr-namespace:Relacao"
        Title="Cadastro de Relatórios" Height="500" Width="400" 
        WindowStartupLocation="CenterScreen" ResizeMode="CanResizeWithGrip" Icon="Imagens/Letter-R.ico"
        Loaded="Window_Loaded" KeyDown="Window_KeyDown">
    <Window.CommandBindings>
        <CommandBinding Command="commands:CustomCommands.InsertRelatorio" 
                        CanExecute="Insert_CanExecute"
                        Executed="Insert_Executed"/>
    </Window.CommandBindings>
    <Grid Margin="10,0,10,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="28" MinHeight="28" MaxHeight="28" />
            <RowDefinition Height="28" MinHeight="28" MaxHeight="28" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Label Content="Descrição" HorizontalAlignment="Left" VerticalAlignment="Center" Padding="0,5,5,5" />
        <TextBox Name="txtDescricao" Grid.Row="1" Margin="0,0,10,0" GotFocus="txtDescricao_GotFocus" TextChanged="txtDescricao_TextChanged" MaxLength="100" />
        <Button Name="btnInserir" Grid.Row="1" Grid.Column="2" HorizontalContentAlignment="Center" 
                Command="commands:CustomCommands.InsertRelatorio" IsDefault="True">
            <StackPanel Orientation="Horizontal">
                <Image Source="/Imagens/16px-apply-icon.png" Stretch="None"/>
                <TextBlock Name="txtBtnInserir" Margin="5,0,0,0" Text="Inserir"/>
            </StackPanel>
        </Button>
        <DataGrid Margin="0,10,0,10" Name="gridDados" Grid.Row="2" Grid.ColumnSpan="2" AutoGenerateColumns="False" 
                  SelectionMode="Single" CanUserResizeRows="False" IsReadOnly="True" ItemsSource="{Binding}" RowHeaderWidth="0">
            <DataGrid.Resources>
                <ContextMenu x:Key="myContextMenu">
                    <MenuItem Name="menuAlterar" Header="Alterar" Click="menuAlterar_Click">
                        <MenuItem.Icon>
                            <Image Source="/Imagens/16px-edit-icon.png"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <Separator />
                    <MenuItem Name="menuExcluir" Header="Excluir" Click="menuExcluir_Click">
                        <MenuItem.Icon>
                            <Image Source="/Imagens/16px-delete-icon.png"/>
                        </MenuItem.Icon>
                    </MenuItem>
                </ContextMenu>
            </DataGrid.Resources>
            <DataGrid.CellStyle>
                <Style TargetType="{x:Type DataGridCell}">
                    <Setter Property="ContextMenu" Value="{StaticResource myContextMenu}"/>
                </Style>
            </DataGrid.CellStyle>
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Width="50*" MaxWidth="100" Binding="{Binding Path=ID}" />
                <DataGridTextColumn Header="DESCRIÇÃO" Width="280*" Binding="{Binding Path=Descricao}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
